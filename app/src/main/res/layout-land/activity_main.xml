<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#46a093"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/textView_weather_logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="00dp"
        app:srcCompat="@drawable/weather_logo"/>

    <EditText
        android:id="@+id/editText_Log_email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="2dp"
        android:textColor="#fdd036"
        android:drawableLeft="@drawable/yellow_account"
        android:background="#46a093"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:hint="@string/login_username" />

    <EditText
        android:id="@+id/editText_Log_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:textColor="#fdd036"
        android:background="#46a093"
        android:drawableLeft="@drawable/yellow_lock"
        android:imeOptions="actionSearch"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/login_password" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mybutton"
        android:onClick="loginUser"
        android:text="@string/login_sign_in" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#ffffff"
            android:text="Not Registered"/>

        <TextView
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="goRegister"
            android:paddingLeft="10dp"
            android:text="@string/login_register"
            android:textColor="#fdd036"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/button_reset_password"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:paddingLeft="10dp"
        android:text="Reset Password"
        android:onClick="forgottenPassword"
        android:textColor="#fdd036"
        android:textStyle="bold" />


</LinearLayout>