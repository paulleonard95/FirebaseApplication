<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#46a093"
    tools:context=".ForgottenPassword">

    <EditText
        android:id="@+id/editText_Forgot_Password_Email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="2dp"
        android:textColor="#fdd036"
        android:drawableLeft="@drawable/yellow_account"
        android:background="#46a093"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:hint="@string/email_address" />

    <Button
        android:id="@+id/button_forgotten_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mybutton"
        android:text="@string/reset_password" />

    <TextView
        android:id="@+id/button_reset_login_page"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Know Password? Log In Here!"
        android:onClick="backToLogin"
        android:textColor="#fdd036"
        android:textStyle="bold" />

</LinearLayout>