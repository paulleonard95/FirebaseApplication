<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46a093"
    android:padding="20dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="73dp">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_log_out"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton"
            android:onClick="logOut"
            android:text="@string/log_out"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton"
            android:onClick="loadMain"
            android:text="Back"
            android:textSize="14sp"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView_Icon"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textView_city"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#fdd036"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/textView_Current_Temp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Current Temperature"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fdd036"
            />

        <TextView
            android:id="@+id/textView_temperature"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/textView_feels_like_text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Feels Like"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fdd036"
            />

        <TextView
            android:id="@+id/textView_feels_like"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/textView_min_temp_text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Minimum Temperature"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fdd036"
            />

        <TextView
            android:id="@+id/textView_min_temp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/textView_max_temp_text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Maximum Temperature"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fdd036"
            />

        <TextView
            android:id="@+id/textView_max_temp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/textView_Current_Humidity"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Current Humidity"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fdd036"
            />

        <TextView
            android:id="@+id/textView_humidity"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/textView_Current_Pressure"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Current Pressure"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fdd036"
            />

        <TextView
            android:id="@+id/textView_pressure"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/textView_wind"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginRight="9dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#fdd036"/>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/textView_Description"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="Description"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#fdd036"
            />

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </RelativeLayout>





</LinearLayout>